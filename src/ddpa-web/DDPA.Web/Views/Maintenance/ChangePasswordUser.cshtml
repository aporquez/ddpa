@using DDPA.Commons.Results;
@{
    ViewData["Title"] = "Change Password";
    var resultMsg = TempData["resultMsg"] ?? "";
}

@section scripts{
    <environment names="Development">
        <script src="~/js/change-password.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/change-password.min.js"></script>
    </environment>
    <script>
        var resultMsg = "@resultMsg";
    </script>
}

@model ChangePasswordUserViewModel
<main>
    <div class="ui container flex-content">
        <div class="column">
            <div class="ui one column grid midimage">
              <div class="sixteen wide column">
                <img class="ui large centered image" src="~/images/logo.png">
              </div>
            </div>
          </div>
        <div class="column">
            <div class="ui one column internally celled grid changepasssegment">
                <div class="row">
                    <div class="sixteen wide tablet eight wide computer centered column">
                        <form id="f_changepassuser" class="ui small form" asp-controller="Maintenance" asp-action="ChangePasswordUser" method="post" role="form" autocomplete="off" novalidate="novalidate">
                            <div class="ui stacked segment">
                                <h4 class="ui violet header ribbon label loginheader">Change Password</h4>
                                <div class="field">
                                    <label class="ui">Old Password</label>
                                    <div class="ui left icon input">
                                        <i class="lock icon"></i>
                                        <input asp-for="OldPassword" type="password" class="validate" placeholder="Password" autocomplete="new-password" required />
                                    </div>
                                </div>
                                <div class="field">
                                    <label class="ui">New Password</label>
                                    <div class="ui left icon input">
                                        <i class="lock icon"></i>
                                        <input asp-for="NewPassword" type="password" class="validate" placeholder="Password" autocomplete="new-password" required />
                                    </div>
                                </div>
                                <div class="field">
                                    <label class="ui">Confirm Password</label>
                                    <div class="ui left icon input">
                                        <i class="lock icon"></i>
                                        <input asp-for="ConfirmPassword" type="password" class="validate" placeholder="Password" autocomplete="new-password" required />
                                    </div>
                                </div>
                                <div class="ui buttons fluid">
                                    <a asp-controller="Dashboard" asp-action="Index" class="ui button">
                                        <i class="ban icon"></i>
                                        Cancel
                                    </a>
                                    <div class="or"></div>
                                    <button type="submit" form="f_changepassuser" class="ui blue button">
                                        Save
                                    </button>
                                    @*<a href="dashboard.html" class="ui blue button">Save</a>*@
                                </div>
                            </div>
                            <div class="ui bottom attached message" id="pageMessage" hidden>
                                <i class="close icon" onclick="$(this).parent().fadeOut();"></i>
                                <label></label>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
